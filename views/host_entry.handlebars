<body>
    <div class="jumbotron">
        <h1>Parking Pal</h1>
        <p>Find & Rent Parking Spots</p>
    </div>

<!--
    you can substitue the span of reauth email for a input with the email and
    include the remember me checkbox
    -->
    <div class="container">
        <div class="card card-container">
            <form class="form-signin">
                <label for="spot-location">Location of spot</label>
                <input type="text" id="inputEmail" class="form-control" placeholder="Address" required autofocus>
                <div class="form-group" required autofocus>
                    <label for="type-of-spot">Type of spot</label>
                    <select class="form-control" id="sel1">
                        <option value="" disabled selected>Select a type</option>
                        <option>Parking Lot</option>
                        <option>Garage</option>
                        <option>Driveway</option>
                    </select>
                    <br>
                    <label for="spot-desc">Describe the spot</label>
                    <textarea class="form-control" rows="3" id="spot-description" placeholder='Surrounding area, landmarks nearby etc...'></textarea>
                </div>
                <div id="remember" class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                <a href="/index" class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Add Spot</a>
            </form>
            <br>
            <div class="col-xs-12 text-center">
                <a href="/index" class="submit"><i class='glyphicon glyphicon-home'></i>&nbsp;Home</a>
            </div>
        </div><!-- /card-container -->
    </div><!-- /container -->
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
  <script type="/js/login.js"></script>
</body>
